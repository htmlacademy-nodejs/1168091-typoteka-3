header.header
  -
    var isAuthor = user && user.role === 'author'
  a.header__logo.logo(href='/')
    img.logo__image(src='/img/icons/logo-image-only.svg' alt='логотип Тайпотеки')
    span.logo__name Типотека
  if(!user)
    nav.header__nav
    ul.header__nav-list
      li.header__list-item
        a.header__popup(href='/register') Регистрация
      li.header__list-item
        a.header__enter(href='/login') Вход с паролем
  else
    if isAuthor
      a(class="button button--colored header__button-new" href='articles/add') Новая запись
      div(class="header__dropdown")
        a(href="#", class="button button--burger header__burger") Открыть меню
        ul(class="navigation header__navigation")
          li(class="navigation__item")
            a(href="/") Главная
          li(class="navigation__item")
            a(href="/articles") Статьи
          li(class="navigation__item")
            a(href="/my") Мои публикации
          li(class="navigation__item")
            a(href="/my/categories") Категории
          li(class="navigation__item")
            a(href="/my/comments") Комментарии
          li(class="navigation__item")
            a(href="/logout") Выход
    else
      nav(class="header__nav")
        ul(class="header__nav-list")
          li(class="header__list-item")
            p=`${user.firstName} ${user.lastName}`
          li(class="header__list-item")
            a(class="header__exit", href="/logout") Выйти
      a(class="header__avatar avatar")
        if user.avatar
          img(src=`/img/${user.avatar}`, alt="аватар пользователя" style="border-radius: 50%")
    a(class="header__search button button--search", href="#", aria-label="поиск по сайту")
